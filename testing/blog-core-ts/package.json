{
  "name": "@my-blog/core",
  "private": true,
  "scripts": {
    "build": "pnpm swc src/ --out-dir dist/",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "pnpm swc src/ --out-dir dist/ -w",
    "test": "jest"
  },
  "devDependencies": {
    "@gossi/config-eslint": "workspace:*",
    "@gossi/config-prettier": "workspace:*",
    "@gossi/config-targets": "workspace:*",
    "@jest/globals": "29.7.0",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.5",
    "@swc/jest": "0.2.37",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@types/jest": "^29.5.14",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "jest": "29.7.0",
    "prettier": "^3.5.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">= 20.*"
  }
}
