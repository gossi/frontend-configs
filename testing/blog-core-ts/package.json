{
  "name": "@my-blog/core",
  "private": true,
  "scripts": {
    "build": "pnpm swc src/ --out-dir dist/",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "pnpm swc src/ --out-dir dist/ -w",
    "test": "jest"
  },
  "devDependencies": {
    "@gossi/config-eslint": "workspace:*",
    "@gossi/config-prettier": "workspace:*",
    "@gossi/config-targets": "workspace:*",
    "@jest/globals": "29.7.0",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.40",
    "@swc/jest": "0.2.36",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@types/jest": "^29.5.14",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.1",
    "jest": "29.7.0",
    "prettier": "^3.3.3",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">= 20.16.0"
  }
}
