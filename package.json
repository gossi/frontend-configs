{
  "private": true,
  "version": "0.1.4",
  "scripts": {
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.2.0"
  },
  "volta": {
    "node": "18.12.1"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": true,
      "@release-it-plugins/lerna-changelog": {}
    },
    "git": {
      "changelog": false,
      "tagName": "v${version}",
      "commitMessage": "release v${version}"
    },
    "npm": false
  }
}
