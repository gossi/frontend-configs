  },
  "devDependencies": {
    "@gossi/config-eslint": "workspace:*",
    "@gossi/config-prettier": "workspace:*",
    "eslint": "^9.29.0",
    "prettier": "^3.6.2",
    "stylelint": "16.21.1"
  },
  "peerDependencies": {
    "stylelint": "^16.3.1"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
